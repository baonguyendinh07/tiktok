{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ], // Requires the use of a semicolon after each statement
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "double"
        ], // Requires the use of quotes for each string
        "space-before-function-paren": [
            "error",
            "always"
        ],
        "space-before-blocks": "error",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "react/react-in-jsx-scope": "off",
        "react/jsx-uses-react": "off"
    }
}